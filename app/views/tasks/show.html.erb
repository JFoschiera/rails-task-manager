
<%= link_to "Update a task", edit_task_path %>

<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><% if @task.completed %>
<%= "Done!"%> <%else%> <%= "Pending" %>
<% end %> </p>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Sure about it?" } %>

<li><%= link_to "Back to tasks list", tasks_path %></li>
