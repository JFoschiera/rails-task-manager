
<div class="link-to">
  <%= link_to "Update this task", edit_task_path %>
</div>

<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><% if @task.completed %>
<%= "Status: Done!"%> <%else%> <%= "Status: Pending" %>
<% end %> </p>

<div class="link-to">
  <%= link_to "Delete #{@task.title}",
              task_path(@task),
              method: :delete,
              data: { confirm: "Sure about it?" } %>
</div>

<div class="link-to"><%= link_to "Back to tasks list", tasks_path %></div>
